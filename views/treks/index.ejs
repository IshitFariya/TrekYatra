       
       <%layout('layouts/boilerplate')%>
       <h1>All Treks</h1>
        <div>
            <a href="/treks/new">Add Trek</a>
        </div>
        <ul>
            <% for(let trek of treks){%>
                <div class="card" mb-3>
                    <div class="row">
                        <div class="col-md-4">
                            <img class="img-fluid" alt="" src="<%=trek.image%>">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%=trek.title%></h5>
                                <p class="card-text text-muted"><%=trek.organization%></p>
                                <p class="card-text"><%=trek.description%></p>
                                <p class="card-text">
                                    <small>
                                        <%=trek.location%>
                                    </small>
                                </p>
                                <a class="btn btn-primary" href="/treks/<%=trek._id%>">View <%=trek.title%></a>
                            </div>
                        </div>
                    </div>
                </div>
         <%   }  %>
        </ul>
