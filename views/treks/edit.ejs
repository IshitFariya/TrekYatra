
        <%layout('layouts/boilerplate')%>
        <div class="row">
            <h1 class="text-center text-muted">Edit Your Trek</h1>
            <div class="col-md-6 offset-md-3">
                <form action="/treks/<%=trek._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                     <div class="mb-3">
                        <label class="form-label" for="org">Organization</label>
                        <input class="form-control" type="text" id="org" name="trek[organization]" required value="<%=trek.organization%>">     
                        <div class="valid-feedback">
                            Looks-good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="trek[title]" required value="<%=trek.title%>">     
                        <div class="valid-feedback">
                            Looks-good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input type="text" class="form-control" id="location" name="trek[location]" required value="<%=trek.location%>">     
                        <div class="valid-feedback">
                            Looks-good!
                        </div>
                    </div>

                    <div class="mb-3">
                    <label class="form-label" for="s_date">Start Date</label>
                    <input type="text"  placeholder="dd/mm/yyyy" class="form-control" id="s_date" name="trek[start_date]" required value="<%=trek.start_date%>">
                    <br>
                    <label class="form-label" for="e_date">End Date</label>
                    <input type="text"  placeholder="dd/mm/yyyy" class="form-control" id="e_date" name="trek[end_date]" required value="<%=trek.end_date%>">
                    <div class="valid-feedback">
                        Looks-good!
                    </div>
                </div>
              
                    <div class="mb-3">
                        <label class="form-label" for="price">Enrollment Price</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                              <span class="input-group-text" id="price-label">	&#8377</span>
                            </div>
                            <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="trek[price]" required
                            value="<%=trek.price%>">
                        </div>
                        <div class="valid-feedback">
                            Looks-good!
                        </div>    
                    </div>      
                    <div class="mb-3">
                        <label class="form-label" for="description">description</label>
                        <textarea type="text" class="form-control" id="description" name="trek[description]" required ><%=trek.description%></textarea> 
                        <div class="valid-feedback">
                            Looks-good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="formFileMultiple" class="form-label">Add images:</label>
                        <input class="form-control" type="file" id="image" name="image" multiple>
                    </div>
                
                    <div class="mb-3">
                        <% trek.images.forEach((img,i)=>{%>
                            <img src="<%=img.thumbnail%>"class="img-thumbnail" alt="">
                            <div class="form-check-inline">
                                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                            </div>
                            <label for="image-<%=i%>">Delete?</label>                            
                        <% })%>        
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-success">Update Trek</button>
                    </div>
                </form>
            </div>
        </div>
